---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Content from '~/components/widgets/Content.astro';

import aboutimage from '../assets/images/aboutimage.jpg';

const metadata = {
  title: 'About â€“ Karl Ma',
};
---

<Layout metadata={metadata}>
  <!-- Header -->
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Home', href: '/' },
        { text: 'Projects', href: '/projects' },
        { text: 'Resume', href: '/resume' },
        { text: 'About', href: '/about' },
      ]}
      actions={[
        {
          text: 'Hire me',
          href: '#',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- About Me -->
  <Content
    id="about"
    image={{
      src: aboutimage,
      alt: 'About Me Image',
      loading: 'eager',

      // width: 440,
      // height: 440,
      // class: 'rounded-full',
      // class: 'mx-auto w-full rounded-full bg-gray-500 shadow-lg',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">About Me</h2><br />
      <p>A bit of background: I was born in Shanghai, and grew up in Toronto.</p>

      <p>
        One thing I take pride in is that I have a wide range of interests. I'm generally eager to learn about anything
        that has to do with math or computer science, but beyond STEM related subjects, I also enjoy reading books,
        working out, playing video games, and practicing piano.
      </p>

      <br />
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 dark:bg-transparent"></div>
    </Fragment>
  </Content>
</Layout>
