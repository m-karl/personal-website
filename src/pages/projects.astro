---

<Layout metadata={metadata}>
  <!-- Header -->
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Home', href: '/' },
        { text: 'Projects', href: '/projects' },
        { text: 'Resume', href: '/resume' },
        { text: 'About', href: '/about' },
      ]}
      actions={[
        {
          text: 'Hire me',
          href: '#',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Projects -->

  <!-- ******** Project 1 ******** -->
  <Content
    isReversed
    id="porfolio"
    title="Personal Projects"
    subtitle="Here are some of the things I've been working on in my spare time"
